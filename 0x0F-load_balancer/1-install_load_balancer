#!/usr/bin/env bash
# Bash script that install and configure HAproxy on lb-01 server
apt-get -y update && apt-get install haproxy -y
echo -e "# /etc/haproxy/haproxy.cfg

# Global settings
global
    log /dev/log local0
    log /dev/log local1 notice
    maxconn 4096
    user haproxy
    group haproxy

defaults
    log global
    mode http
    option httplog
    option dontlognull
    timeout connect 5000ms
    timeout client 50000ms
    timeout server 50000ms

frontend http-in
    bind *:80
    default_backend servers

backend servers
    balance roundrobin

    server web-01 54.160.103.40:80 check
    server web-02 52.91.148.127:80 check" > /etc/haproxy/haproxy.cfg
service haproxy restart