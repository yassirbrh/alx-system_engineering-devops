#!/usr/bin/env bash
# Bash script that install and configure HAproxy on lb-01 server
apt-get -y update && apt-get upgrade -y
apt-get -y install software-properties-common
add-apt-repository -y ppa:vbernat/haproxy-2.5
apt-get -y update && apt-get install haproxy -y
sed -i 's/ENABLED=0/ENABLED=1/' /etc/default/haproxy
echo -e "# /etc/haproxy/haproxy.cfg

# Global settings
global
    log /dev/log local0
    log /dev/log local1 notice
    maxconn 4096
    user haproxy
    group haproxy

defaults
    log global
    mode http
    option httplog
    option dontlognull
    timeout connect 5000ms
    timeout client 50000ms
    timeout server 50000ms

frontend http-in
    bind *:80
    default_backend servers

backend servers
    balance roundrobin

    server 388479-web-01 54.160.103.40:80 check
    server 388479-web-02 52.91.148.127:80 check" > /etc/haproxy/haproxy.cfg
service haproxy restart